<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Carina Demo - Android Tests" verbose="1">
    <parameter name="suiteOwner" value="Tester"/>
    <parameter name="jenkinsJobName" value="Android-Demo-Test"/>
    <parameter name="jenkinsJobType" value="android"/>
    <parameter name="jenkinsEnvironments" value="DEMO"/>
    <parameter name="jenkinsRegressionPipeline" value="mobile_regression"/>
    <parameter name="jenkinsAutoScreenshot" value="true"/>
    <parameter name="jenkinsMobileDefaultPool" value="ANY"/>

    <parameter name="jenkinsMobileLifecycle" value="false"/>
    <parameter name="jenkinsEmail" value="demo@gmail.com"/>
    <parameter name="jenkinsJobExecutionMode" value="continue"/>

    <!--   Custom properties files -->
    <parameter name="configFile" value="src/main/resources/_config.properties"/>
    <parameter name="env" value="DEMO"/>

    <test name="Android Mobile Tests">
        <parameter name="test_platform" value="android"/>
        <classes>
            <class name="com.zebrunner.carina.automationexercise.mobile.AndroidTodoAppTest"/>
        </classes>
    </test>
</suite>